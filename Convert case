#include <stdio.h>

void convert_case(char str[]) {
    int i = 0;
    while (str[i] != '\0') {
        if (str[i] >= 'a' && str[i] <= 'z')
            str[i] -= 32;
        else if (str[i] >= 'A' && str[i] <= 'Z')
            str[i] += 32;
        i++;
    }
}

int main() {
    char str[] = "Hello, World!";

    convert_case(str);

    printf("Converted string: %s\n", str);
    return 0;
