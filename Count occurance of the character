#include <stdio.h>

int count_occurrences(char str[], char ch) {
    int count = 0, i;
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] == ch)
            count++;
    }
    return count;
}

int main() {
    char str[] = "Hello, World!";
    char ch = 'o';

    printf("Character '%c' occurs %d times.\n", ch, count_occurrences(str, ch));
    return 0;
